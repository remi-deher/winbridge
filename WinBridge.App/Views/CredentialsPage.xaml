<Page
    x:Class="WinBridge.App.Views.CredentialsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:WinBridge.Core.Models"
    xmlns:local="using:WinBridge.App.Views"
    x:Name="PageRoot"
    mc:Ignorable="d">

    <Page.Resources>
        <local:CredentialTypeToIconConverter x:Key="CredentialTypeToIconConverter" />
        <local:OwnerToDisplayNameConverter x:Key="OwnerToDisplayNameConverter" />
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header with CommandBar -->
        <Grid Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="Identifiants" Style="{ThemeResource TitleTextBlockStyle}" VerticalAlignment="Center" />

            <CommandBar Grid.Column="1" DefaultLabelPosition="Right" Background="Transparent" IsOpen="False">
                <AppBarButton Icon="Add" Label="Ajouter" Click="AddCredential_Click" />
            </CommandBar>
        </Grid>

        <!-- List -->
        <ListView Grid.Row="1" ItemsSource="{Binding Credentials, ElementName=PageRoot}" SelectionMode="None">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Margin" Value="0,0,0,8" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="12">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <!-- Icon -->
                            <Border Width="40" Height="40" CornerRadius="20" Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" VerticalAlignment="Center">
                                <FontIcon Glyph="{Binding Type, Converter={StaticResource CredentialTypeToIconConverter}}" FontSize="20" />
                            </Border>

                            <!-- Text -->
                            <StackPanel Grid.Column="1" Margin="16,0" VerticalAlignment="Center" Spacing="2">
                                <TextBlock Text="{Binding DisplayName}" Style="{ThemeResource BodyStrongTextBlockStyle}" />
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="{Binding UserName}" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    <TextBlock Text="â€¢" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    <TextBlock Text="{Binding OwnerModuleId, Converter={StaticResource OwnerToDisplayNameConverter}}" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="{ThemeResource SystemAccentColor}" />
                                </StackPanel>
                            </StackPanel>

                            <!-- Actions -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4">
                                <Button Click="EditCredential_Click" Tag="{Binding}" Background="Transparent" BorderThickness="0" Padding="8">
                                    <ToolTipService.ToolTip>
                                        <ToolTip Content="Modifier" />
                                    </ToolTipService.ToolTip>
                                    <FontIcon Glyph="&#xE70F;" FontSize="16" />
                                </Button>
                                <Button Click="DeleteCredential_Click" Tag="{Binding}" Background="Transparent" BorderThickness="0" Padding="8">
                                    <ToolTipService.ToolTip>
                                        <ToolTip Content="Supprimer" />
                                    </ToolTipService.ToolTip>
                                    <FontIcon Glyph="&#xE74D;" Foreground="{ThemeResource SystemFillColorCriticalBrush}" FontSize="16" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

