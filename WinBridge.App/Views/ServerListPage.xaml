<Page
    x:Class="WinBridge.App.Views.ServerListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:WinBridge.Core.Models"
    xmlns:viewmodels="using:WinBridge.App.ViewModels"
    mc:Ignorable="d"
    x:Name="RootPage">

    <Grid Padding="24" RowDefinitions="Auto,*">
        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24" ColumnDefinitions="*,Auto">
            <TextBlock Text="Gestion des Serveurs" Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center"/>
            <Button Grid.Column="1" Click="AddServer_Click" Style="{StaticResource AccentButtonStyle}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE710;"/>
                    <TextBlock Text="Ajouter"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- List -->
        <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.Servers, Mode=OneWay}" SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Server">
                    <Grid Padding="12" ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0" Spacing="4" VerticalAlignment="Center">
                            <TextBlock Text="{x:Bind Name}" FontWeight="Bold" Style="{StaticResource BodyTextBlockStyle}"/>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="{x:Bind Host}" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text=":" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind Port}" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <Button Content="GÃ©rer" Click="OnManageServerClicked" Tag="{x:Bind}" />
                            
                            <Button Background="Transparent" BorderThickness="0" ToolTipService.ToolTip="Modifier" Click="OnEditServerClicked" Tag="{x:Bind}">
                                <FontIcon Glyph="&#xE70F;"/>
                            </Button>
                            
                            <Button Command="{Binding ElementName=RootPage, Path=ViewModel.DeleteServerCommand}" 
                                    CommandParameter="{x:Bind}"
                                    Background="Transparent" BorderThickness="0"
                                    ToolTipService.ToolTip="Supprimer">
                                <FontIcon Glyph="&#xE74D;" Foreground="Red"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

