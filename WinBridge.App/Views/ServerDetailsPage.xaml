<Page
    x:Class="WinBridge.App.Views.ServerDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:WinBridge.App.Models"
    xmlns:local="using:WinBridge.App.Views"
    mc:Ignorable="d">

    <Grid RowDefinitions="Auto,*,Auto" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <!-- Header -->
        <Grid Grid.Row="0" Padding="24" ColumnDefinitions="Auto,*,Auto">
            
            <!-- Server Info -->
            <StackPanel Spacing="4" VerticalAlignment="Center" Margin="0,0,24,0">
                <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                    <TextBlock x:Name="ServerNameBlock" Text="Serveur Inconnu" Style="{StaticResource TitleTextBlockStyle}"/>
                    <!-- Mocking an InfoBadge with Border -->
                    <Border Background="{ThemeResource SystemFillColorSuccessBackgroundBrush}" 
                            CornerRadius="4" Padding="8,2" VerticalAlignment="Center">
                        <TextBlock Text="En ligne" 
                                   Foreground="{ThemeResource SystemFillColorSuccessBrush}" 
                                   Style="{StaticResource CaptionTextBlockStyle}" 
                                   FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>
                <TextBlock x:Name="ServerIpBlock" Text="0.0.0.0" Style="{StaticResource SubtitleTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <!-- Compact Metrics -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="24" VerticalAlignment="Center">
                
                <!-- CPU -->
                <StackPanel Spacing="4" Width="100">
                    <Grid>
                        <TextBlock Text="CPU" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock x:Name="CpuText" Text="0%" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                    </Grid>
                    <ProgressBar x:Name="CpuBar" Value="0" Maximum="100" Height="4"/>
                </StackPanel>

                <!-- RAM -->
                <StackPanel Spacing="4" Width="100">
                    <Grid>
                        <TextBlock Text="RAM" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock x:Name="RamText" Text="0 GB" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                    </Grid>
                    <ProgressBar x:Name="RamBar" Value="0" Maximum="100" Height="4" Foreground="{ThemeResource SystemFillColorCautionBrush}"/>
                </StackPanel>

                <!-- DISK -->
                <StackPanel Spacing="4" Width="100">
                    <Grid>
                        <TextBlock Text="Disk" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock x:Name="DiskText" Text="0%" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                    </Grid>
                    <ProgressBar x:Name="DiskBar" Value="0" Maximum="100" Height="4"/>
                </StackPanel>

                <!-- NET -->
                <StackPanel Spacing="0" Width="150">
                    <TextBlock x:Name="NetInterfaceHeader" Text="--" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" VerticalAlignment="Center"/>
                    <Grid ColumnDefinitions="*,*">
                        <StackPanel Orientation="Horizontal" Spacing="4" ToolTipService.ToolTip="Entrant">
                            <FontIcon Glyph="&#xE74B;" FontSize="10" Foreground="{ThemeResource SystemFillColorSuccessBrush}" VerticalAlignment="Center"/>
                            <TextBlock x:Name="NetDownText" Text="0" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4" HorizontalAlignment="Right" ToolTipService.ToolTip="Sortant">
                            <FontIcon Glyph="&#xE74A;" FontSize="10" Foreground="{ThemeResource SystemFillColorCautionBrush}" VerticalAlignment="Center"/>
                            <TextBlock x:Name="NetUpText" Text="0" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </StackPanel>

            <!-- Actions -->
            <CommandBar Grid.Column="2" DefaultLabelPosition="Right" Background="Transparent" IsOpen="False" VerticalAlignment="Center">
                <AppBarButton Icon="Refresh" Label="Redémarrer"/>
                <AppBarButton Label="Éteindre">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE7E8;"/>
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarSeparator/>
                <AppBarButton Icon="Setting" Label="Paramètres"/>
            </CommandBar>
        </Grid>

        <!-- Main Content (Pivot + Sidebar) -->
        <Grid Grid.Row="1" Padding="24,0,24,24" ColumnSpacing="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Pivot -->
            <Pivot x:Name="MainPivot" Grid.Column="0">

                <PivotItem Header="Vue d'ensemble" Margin="0,12,0,0">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Informations Système" Style="{StaticResource SubtitleTextBlockStyle}"/>
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*" RowSpacing="8" ColumnSpacing="16">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Système d'exploitation" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="OsValText" Text="Chargement..." FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Noyau" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="KernelValText" Text="--" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Processeur" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <TextBlock x:Name="CpuModelText" Text="Chargement..." FontWeight="SemiBold"/>
                                <Border Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}" CornerRadius="4" Padding="6,2" VerticalAlignment="Center">
                                    <TextBlock x:Name="CpuCoresText" Text="-- Coeurs" Style="{StaticResource CaptionTextBlockStyle}"/>
                                </Border>
                            </StackPanel>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Mémoire" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="RamValText" Text="--" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Temps de fonctionnement" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="UptimeValText" Text="--" FontWeight="SemiBold"/>
                            
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Interface" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" x:Name="NetInterfaceText" Text="--" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Adresse IP" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" x:Name="NetIpOverviewText" Text="--" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="7" Grid.Column="0" Text="Disques Durs" Foreground="{ThemeResource TextFillColorSecondaryBrush}" VerticalAlignment="Top" Margin="0,8,0,0"/>
                            <ItemsControl Grid.Row="7" Grid.Column="1" x:Name="DiskList" Margin="0,8,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnDefinitions="140,80,60,*" Margin="0,0,0,4">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon Glyph="&#xE7F4;" FontSize="12"/>
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                            </StackPanel>
                                            <TextBlock Grid.Column="1" Text="{Binding Size}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock Grid.Column="2" Text="{Binding Used}" Foreground="{ThemeResource SystemFillColorCautionBrush}"/>
                                            <TextBlock Grid.Column="3" Text="{Binding Mount}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontStyle="Italic"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </StackPanel>
                </PivotItem>

                <PivotItem Header="Console SSH" Margin="0,12,0,0">
                    <Grid RowDefinitions="Auto,*">
                        <!-- Barre d'outils de connexion -->
                        <!-- Barre d'état de connexion -->
                        <Grid Grid.Row="0" Padding="0,0,0,12">
                            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                <ProgressRing x:Name="ConnectionProgressRing" IsActive="False" Width="16" Height="16" Visibility="Collapsed"/>
                                <TextBlock x:Name="ConnectionStatusText" 
                                       Text="En attente..." 
                                       VerticalAlignment="Center"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       Visibility="Collapsed"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Terminal SSH avec xterm.js dans WebView2 -->
                        <Border Grid.Row="1" 
                                CornerRadius="8" 
                                BorderThickness="1" 
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                Background="#1e1e2e">
                            <WebView2 x:Name="TerminalWebView"
                                      DefaultBackgroundColor="#FF1E1E2E"/>
                        </Border>
                    </Grid>
                </PivotItem>

                <PivotItem Header="Processus">
                    <Grid RowDefinitions="Auto,*">
                        <!-- Stats Filters -->
                        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,12">
                            <RadioButton Content="Tous" IsChecked="True" GroupName="ProcFilter" Tag="All" Checked="OnProcFilterChanged"/>
                            <RadioButton Content="Actifs (CPU > 0)" GroupName="ProcFilter" Tag="Active" Checked="OnProcFilterChanged"/>
                            <RadioButton Content="Désactivés" GroupName="ProcFilter" Tag="Inactive" Checked="OnProcFilterChanged"/>
                        </StackPanel>

                        <ListView Grid.Row="1" x:Name="ProcessList">
                            <ListView.Header>
                                <Grid ColumnDefinitions="60,*,100,80,80" Padding="12,8" Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="4">
                                    <!-- PID -->
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center" Tapped="OnSortHeaderTapped" Tag="Pid">
                                        <TextBlock Text="PID" FontWeight="Bold" Style="{StaticResource CaptionTextBlockStyle}"/>
                                        <FontIcon x:Name="SortIconPid" Glyph="&#xE74B;" FontSize="10" Visibility="Collapsed"/>
                                    </StackPanel>
                                    
                                    <!-- NOM -->
                                    <Grid Grid.Column="1">
                                        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal" Spacing="4" Tapped="OnSortHeaderTapped" Tag="Command">
                                                <TextBlock Text="Nom" FontWeight="Bold" Style="{StaticResource CaptionTextBlockStyle}"/>
                                                <FontIcon x:Name="SortIconCommand" Glyph="&#xE74B;" FontSize="10" Visibility="Collapsed"/>
                                            </StackPanel>
                                            <Button Background="Transparent" BorderThickness="0" Padding="4" Height="24" Width="24">
                                                <FontIcon Glyph="&#xE71C;" FontSize="12"/>
                                                <Button.Flyout>
                                                    <Flyout>
                                                        <StackPanel Width="200" Spacing="8">
                                                            <TextBlock Text="Filtrer par nom" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                                            <TextBox PlaceholderText="ex: nginx, docker..." TextChanged="OnProcNameFilterChanged"/>
                                                        </StackPanel>
                                                    </Flyout>
                                                </Button.Flyout>
                                            </Button>
                                        </StackPanel>
                                    </Grid>

                                    <!-- USER -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center" Tapped="OnSortHeaderTapped" Tag="User">
                                        <TextBlock Text="Utilisateur" FontWeight="Bold" Style="{StaticResource CaptionTextBlockStyle}"/>
                                        <FontIcon x:Name="SortIconUser" Glyph="&#xE74B;" FontSize="10" Visibility="Collapsed"/>
                                    </StackPanel>

                                    <!-- CPU -->
                                    <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center" HorizontalAlignment="Right" Tapped="OnSortHeaderTapped" Tag="Cpu">
                                        <TextBlock Text="CPU" FontWeight="Bold" Style="{StaticResource CaptionTextBlockStyle}"/>
                                        <FontIcon x:Name="SortIconCpu" Glyph="&#xE74B;" FontSize="10" Visibility="Collapsed"/> <!-- Default Sorted -->
                                    </StackPanel>

                                    <!-- RAM -->
                                    <StackPanel Grid.Column="4" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center" HorizontalAlignment="Right" Tapped="OnSortHeaderTapped" Tag="Mem">
                                        <TextBlock Text="RAM" FontWeight="Bold" Style="{StaticResource CaptionTextBlockStyle}"/>
                                        <FontIcon x:Name="SortIconMem" Glyph="&#xE74B;" FontSize="10" Visibility="Collapsed"/>
                                    </StackPanel>
                                </Grid>
                            </ListView.Header>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="60,*,100,80,80" Padding="0,4">
                                        <Grid.ContextFlyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem Text="Arrêter le processus" Click="OnStopProcessClick" CommandParameter="{Binding Pid}">
                                                    <MenuFlyoutItem.Icon>
                                                        <SymbolIcon Symbol="Stop"/>
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                                <MenuFlyoutItem Text="Redémarrer" Click="OnRestartProcessClick" CommandParameter="{Binding Pid}">
                                                    <MenuFlyoutItem.Icon>
                                                        <SymbolIcon Symbol="Refresh"/>
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                            </MenuFlyout>
                                        </Grid.ContextFlyout>
                                        
                                        <TextBlock Text="{Binding Pid}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Command}" Grid.Column="1" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding User}" Grid.Column="2" Foreground="{ThemeResource TextFillColorSecondaryBrush}" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Cpu}" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Mem}" Grid.Column="4" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </PivotItem>

                <PivotItem Header="Logs" Margin="0,12,0,0">
                    <Grid ColumnDefinitions="250,*" ColumnSpacing="12">
                        <!-- File List -->
                        <Grid Grid.Column="0" RowDefinitions="Auto,*" Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="4">
                             <StackPanel Padding="12">
                                <TextBlock Text="Fichiers Logs" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                                    <TextBox x:Name="LogPathBox" PlaceholderText="/var/log" Text="/var/log" IsEnabled="False" Width="140"/>
                                    <Button Content="↻" Click="OnRefreshLogsClick" ToolTipService.ToolTip="Rafraîchir"/>
                                </StackPanel>
                             </StackPanel>
                             <ListView Grid.Row="1" x:Name="LogFileList" SelectionChanged="OnLogFileSelectionChanged" Padding="0,0,0,12">
                                <ListView.ContextFlyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem Text="Télécharger" Click="OnDownloadsLogClick">
                                            <MenuFlyoutItem.Icon><SymbolIcon Symbol="Download"/></MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem Text="Rafraîchir la liste" Click="OnRefreshLogsClick">
                                            <MenuFlyoutItem.Icon><SymbolIcon Symbol="Refresh"/></MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                    </MenuFlyout>
                                </ListView.ContextFlyout>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="8" Padding="12,8">
                                            <FontIcon Glyph="&#xE7C3;" FontSize="14" Foreground="{ThemeResource SystemAccentColor}"/>
                                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                             </ListView>
                        </Grid>
                        
                        <!-- Content -->
                        <Grid Grid.Column="1" Background="#1e1e2e" CornerRadius="8">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                <TextBlock x:Name="LogContentText" Foreground="#e0e0e0" FontFamily="Consolas" FontSize="12" Padding="12" TextWrapping="Wrap" Text="Sélectionnez un fichier pour voir les 500 dernières lignes."/>
                            </ScrollViewer>
                            <ProgressRing x:Name="LogLoadingRing" IsActive="False" HorizontalAlignment="Center" VerticalAlignment="Center" Width="40" Height="40"/>
                        </Grid>
                    </Grid>
                </PivotItem>

                <PivotItem Header="Fichiers (SFTP)" Margin="0,12,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/> 
                            <RowDefinition Height="*"/>    
                        </Grid.RowDefinitions>

                        <!-- Breadcrumbs & Source Selection -->
                        <Grid Grid.Row="0" Padding="0,0,0,12" ColumnDefinitions="*,12,*">
                            <!-- Left Pane Control -->
                            <Grid Grid.Column="0" RowDefinitions="Auto,Auto">
                                <!-- Source Selector + Filter -->
                                <Grid ColumnDefinitions="1.5*,*,Auto">
                                    <ComboBox x:Name="LeftSourceSelector" HorizontalAlignment="Stretch" Margin="0,0,8,8" SelectionChanged="OnLeftSourceChanged"/>
                                    <AutoSuggestBox Grid.Column="1" x:Name="LeftSearchBox" QueryIcon="Find" PlaceholderText="Filtrer" TextChanged="OnLeftFilterChanged" HorizontalAlignment="Stretch" Margin="0,0,8,8"/>
                                    <Button Grid.Column="2" Content="Envoyer" Margin="0,0,0,8" Background="{ThemeResource SystemAccentColor}" Foreground="White">
                                        <Button.Flyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem Text="Fichier" Click="OnUploadFileClick"/>
                                                <MenuFlyoutItem Text="Dossier" Click="OnUploadFolderClick"/>
                                            </MenuFlyout>
                                        </Button.Flyout>
                                    </Button>
                                </Grid>

                                <!-- Breadcrumb -->
                                <Grid Grid.Row="1" ColumnDefinitions="Auto,*">
                                    <Button Content="↑" Click="OnLeftUpClick" Margin="0,0,8,0" ToolTipService.ToolTip="Dossier parent"/>
                                    <BreadcrumbBar x:Name="LeftBreadcrumb" ItemClicked="OnLeftBreadcrumbClicked">
                                        <BreadcrumbBar.ItemTemplate>
                                            <DataTemplate x:DataType="local:CrumbItem">
                                                <TextBlock Text="{x:Bind Name}" />
                                            </DataTemplate>
                                        </BreadcrumbBar.ItemTemplate>
                                    </BreadcrumbBar>
                                </Grid>
                            </Grid>

                            <!-- Right Pane Control (Always Current Server) -->
                            <Grid Grid.Column="2" RowDefinitions="Auto,Auto">
                                <!-- Label + Filter -->
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <TextBlock Text="Distant" VerticalAlignment="Center" Margin="0,0,12,8" FontWeight="SemiBold"/>
                                    <AutoSuggestBox Grid.Column="1" x:Name="RightSearchBox" QueryIcon="Find" PlaceholderText="Filtrer" TextChanged="OnRightFilterChanged" HorizontalAlignment="Stretch" Margin="0,0,8,8"/>
                                    <Button Grid.Column="2" Content="Télécharger" Click="OnDownloadClick" Margin="0,0,0,8"/>
                                </Grid>

                                <!-- Breadcrumb -->
                                <Grid Grid.Row="1" ColumnDefinitions="Auto,*">
                                    <Button Content="↑" Click="OnRightUpClick" Margin="0,0,8,0" ToolTipService.ToolTip="Dossier parent"/>
                                    <BreadcrumbBar x:Name="RightBreadcrumb" ItemClicked="OnRightBreadcrumbClicked">
                                        <BreadcrumbBar.ItemTemplate>
                                            <DataTemplate x:DataType="local:CrumbItem">
                                                <TextBlock Text="{x:Bind Name}" />
                                            </DataTemplate>
                                        </BreadcrumbBar.ItemTemplate>
                                    </BreadcrumbBar>
                                </Grid>
                            </Grid>
                        </Grid>

                        <!-- File Lists -->
                        <Grid Grid.Row="1" ColumnDefinitions="*,12,*">
                             
                             <!-- LEFT LIST -->
                             <Grid Grid.Column="0" RowDefinitions="Auto,*">
                                 <!-- Sort Header -->
                                 <Grid Grid.Row="0" ColumnDefinitions="30,*,80" Background="{ThemeResource LayerFillColorDefaultBrush}" Padding="12,8" BorderThickness="1,1,1,0" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" CornerRadius="4,4,0,0">
                                     <TextBlock Grid.Column="1" Text="Nom" FontWeight="SemiBold" Tapped="OnLeftSortName"/>
                                     <TextBlock Grid.Column="2" Text="Taille" FontWeight="SemiBold" HorizontalAlignment="Right" Tapped="OnLeftSortSize"/>
                                 </Grid>
                                 
                                 <ListView x:Name="LeftFileGrid" Grid.Row="1" SelectionMode="Extended" 
                                           DoubleTapped="OnLeftDoubleTapped"
                                           CanDragItems="True" AllowDrop="True"
                                           DragItemsStarting="OnLeftDragItemsStarting" DragOver="OnLeftDragOver" Drop="OnLeftDrop"
                                           BorderThickness="1" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" CornerRadius="0,0,4,4">
                                     <ListView.ContextFlyout>
                                         <MenuFlyout>
                                             <MenuFlyoutItem Text="Renommer" Click="OnLeftRenameClick">
                                                 <MenuFlyoutItem.Icon><SymbolIcon Symbol="Rename"/></MenuFlyoutItem.Icon>
                                             </MenuFlyoutItem>
                                             <MenuFlyoutItem Text="Supprimer" Click="OnLeftDeleteClick">
                                                 <MenuFlyoutItem.Icon><SymbolIcon Symbol="Delete"/></MenuFlyoutItem.Icon>
                                             </MenuFlyoutItem>
                                             <MenuFlyoutSeparator/>
                                             <MenuFlyoutItem Text="Nouveau Dossier" Click="OnLeftNewFolderClick">
                                                 <MenuFlyoutItem.Icon><SymbolIcon Symbol="Add"/></MenuFlyoutItem.Icon>
                                             </MenuFlyoutItem>
                                             <MenuFlyoutItem Text="Propriétés" Click="OnLeftPropertiesClick">
                                                 <MenuFlyoutItem.Icon><SymbolIcon Symbol="Setting"/></MenuFlyoutItem.Icon>
                                             </MenuFlyoutItem>
                                             <MenuFlyoutItem Text="Copier le chemin" Click="OnLeftCopyPathClick">
                                                 <MenuFlyoutItem.Icon><SymbolIcon Symbol="Copy"/></MenuFlyoutItem.Icon>
                                             </MenuFlyoutItem>
                                         </MenuFlyout>
                                     </ListView.ContextFlyout>
                                     <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="models:FileItem">
                                            <Grid ColumnDefinitions="30,*,80">
                                                <FontIcon Glyph="{x:Bind IconGlyph}" FontFamily="{ThemeResource SymbolThemeFontFamily}" FontSize="16"/>
                                                <TextBlock Text="{x:Bind Name}" Grid.Column="1" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" Margin="4,0,0,0"/>
                                                <TextBlock Text="{x:Bind SizeDisplay}" Grid.Column="2" VerticalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Right" FontSize="12"/>
                                            </Grid>
                                        </DataTemplate>
                                     </ListView.ItemTemplate>
                                 </ListView>
                             </Grid>

                             <!-- RIGHT LIST -->
                             <Grid Grid.Column="2" RowDefinitions="Auto,*">
                                 <!-- Sort Header (Row 0) -->

                                 <!-- Sort Header -->
                                 <Grid Grid.Row="0" ColumnDefinitions="30,*,80" Background="{ThemeResource LayerFillColorDefaultBrush}" Padding="12,8" BorderThickness="1,1,1,0" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" CornerRadius="4,4,0,0">
                                     <TextBlock Grid.Column="1" Text="Nom" FontWeight="SemiBold" Tapped="OnRightSortName"/>
                                     <TextBlock Grid.Column="2" Text="Taille" FontWeight="SemiBold" HorizontalAlignment="Right" Tapped="OnRightSortSize"/>
                                 </Grid>

                                 <ListView x:Name="RightFileGrid" Grid.Row="1" SelectionMode="Extended" 
                                           DoubleTapped="OnRightDoubleTapped"
                                           CanDragItems="True" AllowDrop="True"
                                           DragItemsStarting="OnRightDragItemsStarting" DragOver="OnRightDragOver" Drop="OnRightDrop"
                                           BorderThickness="1" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" CornerRadius="0,0,4,4">
                                     <ListView.ContextFlyout>
                                         <MenuFlyout>
                                             <MenuFlyoutItem Text="Renommer" Click="OnRightRenameClick">
                                                  <MenuFlyoutItem.Icon><SymbolIcon Symbol="Rename"/></MenuFlyoutItem.Icon>
                                             </MenuFlyoutItem>
                                             <MenuFlyoutItem Text="Supprimer" Click="OnRightDeleteClick">
                                                  <MenuFlyoutItem.Icon><SymbolIcon Symbol="Delete"/></MenuFlyoutItem.Icon>
                                             </MenuFlyoutItem>
                                             <MenuFlyoutSeparator/>
                                             <MenuFlyoutItem Text="Nouveau Dossier" Click="OnRightNewFolderClick">
                                                  <MenuFlyoutItem.Icon><SymbolIcon Symbol="Add"/></MenuFlyoutItem.Icon>
                                             </MenuFlyoutItem>
                                             <MenuFlyoutItem Text="Propriétés" Click="OnRightPropertiesClick">
                                                  <MenuFlyoutItem.Icon><SymbolIcon Symbol="Setting"/></MenuFlyoutItem.Icon>
                                             </MenuFlyoutItem>
                                             <MenuFlyoutItem Text="Copier le chemin" Click="OnRightCopyPathClick">
                                                  <MenuFlyoutItem.Icon><SymbolIcon Symbol="Copy"/></MenuFlyoutItem.Icon>
                                             </MenuFlyoutItem>
                                         </MenuFlyout>
                                     </ListView.ContextFlyout>
                                     <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="models:FileItem">
                                             <Grid ColumnDefinitions="30,*,80">
                                                <FontIcon Glyph="{x:Bind IconGlyph}" FontFamily="{ThemeResource SymbolThemeFontFamily}" FontSize="16" Foreground="{ThemeResource SystemAccentColor}"/>
                                                <TextBlock Text="{x:Bind Name}" Grid.Column="1" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" Margin="4,0,0,0"/>
                                                <TextBlock Text="{x:Bind SizeDisplay}" Grid.Column="2" VerticalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Right" FontSize="12"/>
                                            </Grid>
                                        </DataTemplate>
                                     </ListView.ItemTemplate>
                                 </ListView>
                             </Grid>
                        </Grid>
                    </Grid>
                </PivotItem>

            </Pivot>

            <!-- Right: Sidebar Actions/Modules -->
            <!-- Right: Sidebar Actions/Modules -->
            <StackPanel Grid.Column="1" Spacing="24">
                 
                 <!-- Modules Section (Top) -->
                 <StackPanel Spacing="12">
                     <TextBlock Text="Modules" Style="{StaticResource SubtitleTextBlockStyle}"/>
                     <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="12">
                         <StackPanel Spacing="8">
                            <TextBlock Text="Modules Chargés" Style="{StaticResource BodyStrongTextBlockStyle}" Margin="0,0,0,8"/>
                             <!-- Liste des modules (Placeholder pour l'instant) -->
                             <Grid ColumnDefinitions="32,*" ColumnSpacing="12">
                                <FontIcon Glyph="&#xE774;" FontSize="20"/>
                                <TextBlock Grid.Column="1" Text="Docker Manager" VerticalAlignment="Center"/>
                            </Grid>
                            <Grid ColumnDefinitions="32,*" ColumnSpacing="12">
                                <FontIcon Glyph="&#xE90F;" FontSize="20"/>
                                <TextBlock Grid.Column="1" Text="Updates" VerticalAlignment="Center"/>
                            </Grid>
                            <TextBlock Text="Aucun autre module" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                         </StackPanel>
                     </Border>
                 </StackPanel>

                 <!-- Quick Actions (Bottom) -->
                 <StackPanel Spacing="12">
                     <TextBlock Text="Actions Rapides" Style="{StaticResource SubtitleTextBlockStyle}"/>
                     <!-- Placeholder actions -->
                     <TextBlock Text="Aucune action configurée" Style="{StaticResource BodyTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Opacity="0.5"/>
                 </StackPanel>

            </StackPanel>
        </Grid>

        <!-- Transfer Queue Panel -->
        <Expander Grid.Row="2" IsExpanded="False" HorizontalAlignment="Stretch" Margin="24,0,24,12">
            <Expander.Header>
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <FontIcon Glyph="&#xE753;" FontSize="16"/>
                    <TextBlock Text="File d'attente des transferts" VerticalAlignment="Center"/>
                </StackPanel>
            </Expander.Header>
            
            <ListView ItemsSource="{x:Bind TransferTasks}" MaxHeight="250" SelectionMode="None">
               <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:TransferTask">
                        <Grid ColumnDefinitions="30,*,100" Padding="8,4" ColumnSpacing="12">
                            <TextBlock Text="{x:Bind DirectionIcon}" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            
                            <StackPanel Grid.Column="1" Spacing="4">
                                <TextBlock Text="{x:Bind FileName}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                <ProgressBar Value="{x:Bind ProgressPercent, Mode=OneWay}" Maximum="100" IsIndeterminate="False"/>
                                <TextBlock Text="{x:Bind StatusText, Mode=OneWay}" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                            
                            <TextBlock Grid.Column="2" Text="{x:Bind Status, Mode=OneWay}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </Expander>
    </Grid>
</Page>
